<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".mvvm.calcular.view.CalculadoraMvvwActivity">

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado..."
        android:layout_margin="20dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/medida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:layout_margin="20dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btnCirculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Circulo"/>

    <Button
        android:id="@+id/btnTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Triangulo"/>

    <Button
        android:id="@+id/btnCuadrado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Cuadrado"/>


</LinearLayout>